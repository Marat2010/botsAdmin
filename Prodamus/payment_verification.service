[Unit]
Description=Prodamus payment verification service
After=multi-user.target
 
[Service]
User=root
Group=root
Type=idle
Restart=on-failure

EnvironmentFile=/etc/environment

ExecStart=/bin/bash -c 'cd /home/$PROJECT_USER/$PROJECT_NAME/ && source venv/bin/activate && python payment_verification.py '

[Install]
WantedBy=multi-user.target
